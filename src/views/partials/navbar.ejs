<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Tech Journal Blog</a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#nav"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="nav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="/posts">Blog</a></li>
    </ul>

    <!-- Search form -->
    <form class="form-inline my-2 my-lg-0 mr-3" action="/posts" method="get">
      <input
        class="form-control mr-sm-2"
        type="search"
        placeholder="Search"
        name="q"
      />
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
        Search
      </button>
    </form>

    <!-- Auth links -->
    <ul class="navbar-nav">
      <% if (!currentUser) { %>
      <li class="nav-item">
        <a class="nav-link" href="/auth/signup">Signup</a>
      </li>
      <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
      <% } else { %>
      <li class="nav-item">
        <span class="navbar-text text-white mr-2">
          Welcome, <%= currentUser.username %>
        </span>
      </li>
      <li class="nav-item">
        <form action="/auth/logout" method="post" class="form-inline">
          <button class="btn btn-sm btn-outline-light">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </div>
</nav>
